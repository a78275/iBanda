extends layout

block content
    .w3-card-4(style="margin: 1%;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);")
        header.w3-charcoal.w3-padding-small(style="width:100%;")
            div.w3-margin
                h3= e.tipo
                h4(style="color:#c0b283")= e.designacao
        .w3-container
            div.w3-padding
                i(class="fa fa-calendar" style="color:#c0b283") &nbsp;&nbsp;
                span= e.data
            div.w3-padding
                i(class="fas fa-map-marked-alt" style="color:#c0b283") &nbsp;&nbsp;
                span= e.local
            if e.horario.hinicio
                div.w3-padding
                    i(class="fas fa-hourglass-half" style="color:#c0b283") &nbsp;&nbsp;
                    span= "√çnicio: " + e.horario.hinicio 
                if e.horario.hfim
                    span &nbsp; &nbsp;
                    span= "Fim: " + e.horario.hfim
            else if e.horario.hfim
                div.w3-padding
                    i(class="fas fa-hourglass-half" style="color:#c0b283") &nbsp;&nbsp;
                    span= "Fim: " + e.horario.hfim 
            if e.informacoes
                div.w3-padding
                    i(class="fa fa-info-circle" style="color:#c0b283") &nbsp;&nbsp;
                    span= e.informacoes